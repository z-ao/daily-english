.container{position:absolute;width:100%;height:100%;display:flex;justify-content:center;align-items:top;padding-top:40rpx;background-color:#f8f8f8;font-family:PingFangSC-Light;overflow:hidden}.container .card__container{position:relative;height:980rpx;width:640rpx;perspective:10000rpx;perspective-origin:50% 150%}.container .card__container .card{position:absolute;top:0;left:0;display:flex;flex-direction:column;align-items:center;height:100%;width:100%;padding:35px 0;background-color:#fff;border-radius:25rpx;box-shadow:0 6rpx 10rpx rgba(0,0,0,.1);transform-style:preserve-3d;transition-duration:.4s;transition-timing-function:linear}.container .card__container .card:first-child{transform:translateZ(0rpx);z-index:3}.container .card__container .card:nth-child(2){transform:translateZ(-300rpx);z-index:2}.container .card__container .card:nth-child(3){transform:translateZ(-600rpx);z-index:1}.container .card__container .card .content{flex:1;width:100%;padding:0 70rpx}.container .card__container .card .content .word{display:block;height:55rpx;line-height:55rpx;margin-bottom:20rpx;text-align:center;font-size:45rpx;color:#353535;font-weight:600}.container .card__container .card .content .spell{display:block;line-height:40rpx;text-align:center;font-size:30rpx;color:#353535}.container .card__container .card .content .translation{display:block;line-height:55rpx;margin-top:80rpx;text-align:left;font-size:30rpx;color:#353535}.container .card__container .card .card-play{display:block;flex:0 0 70rpx;width:70rpx;height:70rpx;transition:all .5s}